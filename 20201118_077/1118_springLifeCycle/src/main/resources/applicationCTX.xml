<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- 기본 생성자를 실행해서 bean을 만들고 setter 메소드로 멤버 변수를 초기화 시킨다. -->
	<bean id="person" class="com.koreait.springLifeCycle.Person">
		<property name="name" value="홍길동"/>
		<property name="age" value="20"/>
	</bean>

	<!-- name, age를 넘겨받는 생성자를 실행해서 bean을 만들고 멤버 변수를 초기화 시킨다. -->
	<bean id="person2" class="com.koreait.springLifeCycle.Person">
		<constructor-arg value="임꺽정"/>
		<constructor-arg value="35"/>
	</bean>
	
</beans>
